<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".actWaterIntakeTracker">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="170dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="183dp"
               android:fontFamily="@font/outfit_medium"
               android:text="Water Intake"
               android:textColor="#000000"
               android:textSize="28sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.385"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imWaterTrackerBack" />

           <ImageView
               android:id="@+id/imageView4"
               android:layout_width="0dp"
               android:layout_height="550dp"
               android:layout_marginTop="400dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:srcCompat="@drawable/tracker_bg" />

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="0dp"
               android:layout_height="360dp"
               android:layout_marginTop="20dp"
               app:layout_constraintEnd_toStartOf="@+id/guideline84"
               app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintStart_toStartOf="@+id/guideline83"
               app:layout_constraintTop_toBottomOf="@+id/textView4"
               app:srcCompat="@drawable/rectangle_shape" />

           <Button
               android:id="@+id/btnAddDrink"
               android:layout_width="300dp"
               android:layout_height="50dp"
               android:layout_marginTop="50dp"
               android:background="@drawable/btn_mid_rounded"
               android:backgroundTint="@color/secondary"
               android:fontFamily="@font/outfit_medium"
               android:text="Add Drink"
               android:textColor="?attr/colorPrimary"
               android:textSize="21sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvWaterTrackerAmountInput" />

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/outfit_semi_bold"
               android:text="Water Tracker"
               android:textColor="#000000"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/imageView2" />

           <TextView
               android:id="@+id/textView8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/poppins_semibold"
               android:text="You took "
               android:textColor="#000000"
               android:textSize="20sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="@+id/imageView2"
               app:layout_constraintHorizontal_bias="0.4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView5" />

           <TextView
               android:id="@+id/tvWaterTrackerTaken"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/poppins_semibold"
               android:text="0 mL"
               android:textColor="?attr/colorPrimary"
               android:textSize="21sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toEndOf="@+id/textView8"
               app:layout_constraintTop_toBottomOf="@+id/textView5" />

           <TextView
               android:id="@+id/textView12"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_semibold"
               android:text="of water today"
               android:textColor="#000000"
               android:textSize="21sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView8" />

           <ImageView
               android:id="@+id/imageView74"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginTop="50dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.498"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/pbWaterTracker"
               app:srcCompat="@drawable/water_droplet_icon" />

           <TextView
               android:id="@+id/tvWaterTrackerPercent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/outfit_bold"
               android:text="0%"
               android:textColor="?attr/colorPrimary"
               android:textSize="21sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imageView74" />

           <ImageView
               android:id="@+id/imageView7"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginTop="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imageView2"
               app:srcCompat="@drawable/square_shape" />

           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="#00CDCDCD"
               android:paddingLeft="5dp"
               android:paddingTop="5dp"
               android:paddingRight="5dp"
               android:paddingBottom="5dp"
               app:layout_constraintBottom_toBottomOf="@+id/imageView7"
               app:layout_constraintEnd_toEndOf="@+id/imageView7"
               app:layout_constraintStart_toStartOf="@+id/imageView7"
               app:layout_constraintTop_toTopOf="@+id/imageView7"
               app:srcCompat="@drawable/cup_water_icon" />

           <ImageView
               android:id="@+id/imageView10"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginStart="20dp"
               android:layout_marginTop="30dp"
               app:layout_constraintEnd_toStartOf="@+id/imageView7"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imageView2"
               app:srcCompat="@drawable/square_shape" />

           <ImageView
               android:id="@+id/imDecWater"
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:layout_constraintBottom_toBottomOf="@+id/imageView10"
               app:layout_constraintEnd_toEndOf="@+id/imageView10"
               app:layout_constraintStart_toStartOf="@+id/imageView10"
               app:layout_constraintTop_toTopOf="@+id/imageView10"
               app:srcCompat="@drawable/minus_icon" />

           <ImageView
               android:id="@+id/imageView11"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginTop="30dp"
               android:layout_marginEnd="20dp"
               android:background="@drawable/square_shape"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@+id/imageView7"
               app:layout_constraintTop_toBottomOf="@+id/imageView2"
               app:srcCompat="@drawable/square_shape" />

           <ImageView
               android:id="@+id/imIncWater"
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:layout_constraintBottom_toBottomOf="@+id/imageView11"
               app:layout_constraintEnd_toEndOf="@+id/imageView11"
               app:layout_constraintStart_toStartOf="@+id/imageView11"
               app:layout_constraintTop_toTopOf="@+id/imageView11"
               app:srcCompat="@drawable/plus_icon" />

           <TextView
               android:id="@+id/tvWaterTrackerAmountInput"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/outfit_medium"
               android:text="1x Glass 250ml"
               android:textColor="@color/primaryText"
               android:textSize="21sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="@+id/imageView4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/imageView7" />

           <TextView
               android:id="@+id/textView145"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="124dp"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/outfit_medium"
               android:text="Daily Goal"
               android:textColor="@color/tertiaryDarkText"
               android:textSize="12sp"
               app:layout_constraintStart_toStartOf="@+id/imageView2"
               app:layout_constraintTop_toBottomOf="@+id/pbWaterTracker" />

           <TextView
               android:id="@+id/tvWaterTrackerGoal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/outfit_medium"
               android:text="2,000"
               android:textColor="@color/primaryText"
               android:textSize="12sp"
               app:layout_constraintStart_toEndOf="@+id/textView145"
               app:layout_constraintTop_toBottomOf="@+id/pbWaterTracker" />

           <TextView
               android:id="@+id/textView147"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/outfit_medium"
               android:text="ml"
               android:textColor="@color/tertiaryDarkText"
               android:textSize="12sp"
               app:layout_constraintStart_toEndOf="@+id/tvWaterTrackerGoal"
               app:layout_constraintTop_toBottomOf="@+id/pbWaterTracker" />

           <ImageView
               android:id="@+id/imWaterTrackerBack"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="20dp"
               app:layout_constraintStart_toStartOf="@+id/guideline83"
               app:layout_constraintTop_toTopOf="parent"
               app:srcCompat="@drawable/arrow_left" />

           <ProgressBar
               android:id="@+id/pbWaterTracker"
               style="?android:attr/progressBarStyleHorizontal"
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/circle_shape"
               android:max="100"
               android:progress="0"
               android:progressDrawable="@drawable/circle_progress_bar_primary"
               android:textAlignment="center"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.497"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView12" />

           <ProgressBar
               android:id="@+id/pbAddDrink"
               style="?android:attr/progressBarStyle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:indeterminateTint="@color/secondary"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvWaterTrackerAmountInput" />

           <androidx.constraintlayout.widget.Guideline
               android:id="@+id/guideline83"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:layout_constraintGuide_percent="0.05" />

           <androidx.constraintlayout.widget.Guideline
               android:id="@+id/guideline84"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:layout_constraintGuide_percent="0.95" />
       </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bannerWaterGoalAchieved">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/banner_bg" />
            <ImageView
                android:id="@+id/imWaterBannerBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toTopOf="@+id/imageView69"
                app:srcCompat="@drawable/arrow_left_white" />

            <Button
                android:id="@+id/btnWaterBannerShare"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_mid_rounded"
                android:backgroundTint="?attr/colorPrimary"
                android:fontFamily="@font/outfit_medium"
                android:text="Share to Friends"
                android:textColor="@color/btnText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imBannerWaterAchievement" />

            <Button
                android:id="@+id/btnWaterBannerCancel"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_mid_rounded_red"
                android:backgroundTint="@color/secondary"
                android:fontFamily="@font/outfit_medium"
                android:text="Not Now"
                android:textColor="@color/btnCancelColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWaterBannerShare" />

            <!--    <TextView-->
            <!--        android:id="@+id/tvWaterBannerPercent"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginTop="5dp"-->
            <!--        android:fontFamily="@font/outfit_bold"-->
            <!--        android:text="0%"-->
            <!--        android:textColor="@color/secondaryText"-->
            <!--        android:textSize="21sp"-->
            <!--        app:layout_constraintEnd_toEndOf="@+id/pbWaterBanner"-->
            <!--        app:layout_constraintHorizontal_bias="0.5"-->
            <!--        app:layout_constraintStart_toStartOf="@+id/pbWaterBanner"-->
            <!--        app:layout_constraintTop_toBottomOf="@+id/imageView74" />-->

            <ImageView
                android:id="@+id/imBannerWaterAchievement"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_marginTop="70dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline24"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/waterachievement" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="242dp"
                app:layout_constraintGuide_percent="0.95" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".settingsFragment">

    <ImageView
        android:id="@+id/imageView84"
        android:layout_width="372dp"
        android:layout_height="370dp"
        android:src="@drawable/rectangle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView85"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/imageView84"
            app:layout_constraintTop_toTopOf="@+id/imageView84"
            app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/tvSettingsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:textColor="@color/primaryText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView84"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toTopOf="@+id/imageView84" />

        <ImageView
            android:id="@+id/imageView86"
            android:layout_width="372sp"
            android:layout_height="2sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView84"
            app:layout_constraintStart_toStartOf="@+id/imageView84"
            app:layout_constraintTop_toBottomOf="@+id/tvSettingsUsername"
            app:srcCompat="@drawable/line_divider_pink" />

    <TextView
        android:id="@+id/textView158"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Account Settings"
        android:textColor="@color/tertiaryDarkText"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toBottomOf="@+id/imageView86" />

    <TextView
        android:id="@+id/textView159"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Edit Profile"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toBottomOf="@+id/textView158" />

    <TextView
        android:id="@+id/textView160"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Change Password"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toBottomOf="@+id/textView159" />

    <ImageView
            android:id="@+id/imSettingsEditProfile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView84"
            app:layout_constraintTop_toBottomOf="@+id/textView158"
            app:srcCompat="@drawable/arrow_right_black" />

        <ImageView
            android:id="@+id/imSettingsChangePass"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView84"
            app:layout_constraintTop_toBottomOf="@+id/imSettingsEditProfile"
            app:srcCompat="@drawable/arrow_right_black" />

    <ImageView
        android:id="@+id/imageView109"
        android:layout_width="372dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView84"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toBottomOf="@+id/textView160"
        app:srcCompat="@drawable/line_divider" />

    <TextView
        android:id="@+id/textView162"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/outfit_medium"
        android:text="More"
        android:textColor="@color/tertiaryDarkText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/imageView109"
        app:layout_constraintTop_toBottomOf="@+id/imageView109" />

    <TextView
        android:id="@+id/textView185"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Design"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView109"
        app:layout_constraintTop_toBottomOf="@+id/textView162" />

        <ImageView
            android:id="@+id/imSettingsDesign"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView109"
            app:layout_constraintTop_toBottomOf="@+id/textView162"
            app:srcCompat="@drawable/arrow_right_black" />

    <ProgressBar
        android:id="@+id/pbSettingFragment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView84"
        app:layout_constraintStart_toStartOf="@+id/imageView84"
        app:layout_constraintTop_toTopOf="@+id/imageView84" />
</androidx.constraintlayout.widget.ConstraintLayout>